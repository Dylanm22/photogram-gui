<h1>List of photos</h1>

<form action="/add_photo" method="get">
  <label for="image">Image</label>
  <input type="text" id="image" name="img_url" placeholder="Enter a URL for the image">

  <label for="caption">Caption</label>
  <textarea type="text" id="caption" name="img_caption" placeholder="Enter a caption for the photo"></textarea>

  <label for="owner_id">Owner ID</label>
  <input type="text" id="owner_id" name="owner_id" placeholder="Enter ID of a User">

  <button>Add photo</button>
</form>

<table border ="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>



<% @photo_list.each do |a_photo|%>

<tr>
    <td><img src="<%=a_photo.image%>" alt="no"></td>
    <td><%=a_photo.caption%></td>
    <td><%=a_photo.poster.username%></td>
    <td><%=a_photo.created_at%></td>
    <td><a href="/photos/<%=a_photo.id%>">show details</a></td>
  </tr>
  <%end%>
  
