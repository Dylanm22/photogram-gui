<h1>Photo details</h1>



<dl>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=@matching_photo.image%>" alt="no" height="300">
  </dd>

  <dt>
    Caption
  </dt>
  <dd>
   <%=@matching_photo.caption%>
  </dd>

  <dt>
    Owner
  </dt>
  <dd>
    <%=@matching_photo.poster.username%>
  </dd>

  <dt>
    Posted
  </dt>
  <dd>
    <%=@matching_photo.created_at%>
  </dd>

  <dt>
    Edit photo
  </dt>
  <dd>
    <form action="/update_photo/<%=@matching_photo.id%>" method="get">
      
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="input_image" placeholder="Enter a URL for the image..." value="<%=@matching_photo.image%>">

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="input_caption" ><%=@matching_photo.caption%></textarea>

      <button>Update photo</button>
    
    </form>
  </dd>

  <dt>
    Delete photo
  </dt>
  <dd>
    <a href="/delete_photo/<%=@matching_photo.id%>">
      Delete this photo
    </a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>
      Commenter
    </th>

    <th>
      Comment
    </th>

    <th>
      Posted
    </th>
  </tr>

<%@matching_photo.comments.each do |a_comment| %>
    <tr>
      <td>
        <%=a_comment.commenter.username%>
      </td>

      <td>
        <%=a_comment.body%>
      </td>

      <td>
         <%=a_comment.created_at%>
      </td>
    </tr>
<%end%>
    
</table>




